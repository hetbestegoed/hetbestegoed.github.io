{
  "name": "tailwind",
  "type": "module",
  "scripts": {
    "start:dev": "npx http-server -a localhost -p 3000 .",
    "start:prod": "npx http-server -a localhost -p 3000 ./dist",
    "css:dev": "npx @tailwindcss/cli -i ./base.css -o ./public/css/styles.css --watch",
    "css:prod": "npx @tailwindcss/cli -i ./base.css -o ./public/css/styles.css --minify",
    "generate:posters": "node scripts/generate-posters.js",
    "build:prod": "rm -rf dist/ && node scripts/generate-posters.js && pnpm run css:prod && mkdir -p dist/ && cp index.html dist/ && cp -R avond-4daagse-elst dist/ && cp -R uitgaansdag-senioren dist/ && cp -R public dist/ && node scripts/build.js"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@tailwindcss/cli": "^4.1.10",
    "csso": "^5.0.5",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.10"
  }
}
